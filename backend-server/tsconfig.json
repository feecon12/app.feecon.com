{
  "compilerOptions": {
    "target": "ES2020", // Modern JS output
    "module": "commonjs", // Node.js uses CommonJS
    "outDir": "./dist", // Compiled JS output folder
    "rootDir": ".", // Source TS files folder
    "strict": true, // Enable all strict type-checking
    "esModuleInterop": true, // Allow default imports from CommonJS
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true, // Skip type checking of declaration files
    "resolveJsonModule": true, // Allow importing .json files
    "typeRoots": ["./node_modules/@types", "./types.d.ts"]
  },
  "include": ["./**/*"],
  "exclude": ["node_modules", "dist"]
}
